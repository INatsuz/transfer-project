extends ../layouts/layout

block content
    div.row.g-0.mt-2
        div.col-12
            form(method="post" action=`/admin/operators/update/${ID}`)
                div.mb-3
                    label.form-label(for="name") Name
                    input.form-control#name(type="text" name="name" value=operator.name)
                div.mb-3
                    label.form-label(for="commission") Commission
                    input.form-control#commission(type="number" name="commission" step=0.01 value=(operator.commission * 100).toFixed(2))
                div.mb-3
                    label.form-label(for="color") Color
                    input.form-control.form-control-color#color(type="color" name="color" value=`${operator.color}` title="Choose a color to match the operator")
                button.btn.btn-success(type="submit")
                    i.bi.bi-pencil
                    |  Update
