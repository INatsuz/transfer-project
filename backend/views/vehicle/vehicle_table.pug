mixin vehicle_table_row(row)
    tr
        td.align-middle= row.ID
        td.align-middle= row.brand
        td.align-middle= row.name
        td.align-middle= row.license_plate
        td.align-middle= row.seat_number
        td.align-middle= row.nickname
        td.align-middle= row.status
        td.text-nowrap.align-middle
            a.btn.btn-sm.btn-primary.me-1(href=`/admin/vehicles/details/${row.ID}`)
                i.bi.bi-list
                |  Details
            a.btn.btn-sm.btn-warning.me-1.ms-1(href=`/admin/vehicles/update/${row.ID}`)
                i.bi.bi-pencil
                |  Edit
            a.btn.btn-sm.btn-danger.ms-1(href=`/admin/vehicles/delete/${row.ID}`)
                i.bi.bi-trash
                |  Delete

mixin vehicle_table(data)
    table.table.table-striped.table-hover
        thead
            tr
                th ID
                th Brand
                th Name
                th License Plate
                th Seats
                th Nickname
                th Status
                th
        tbody
            each row in data
                +vehicle_table_row(row)